/* use YaEventNotifierFrame::setBackground() instead of this file */
YaEventNotifierFrame {
	border-width: 4px 5px 4px 5px;
}

YaEventNotifierFrame #eventNotifierCloseButton {
	border-style: none;
	background-position: center center;
	background-repeat: no-repeat;
}

YaEventNotifierFrame #eventNotifierMessage QTextEdit {
	color: #40311D;
	font-family: Arial serif;
	font-size: 10px;
}

#MainWindow #tabbedNotifier {
	border-style: none;
}

#MainWindow #friendsFrame {
	border-style: none;
}

#MainWindow #friendList {
	border-image: url(:/images/friends.png) 21px 16px 5px 60px;
	border-width: 21px 0px 5px 0px;
}

#MainWindow #contactList {
	border-image: url(:/images/contacts.png) 21px 16px 5px 60px;
	border-width: 21px 0px 5px 0px;
}

#MainWindow #contactsFrame {
	border-style: none;
}

#MainWindow #addContactFrame {
	border-style: none;
}

#MainWindow #statusBar {
	font-family: "Tahoma";
	font-weight: bold;
	font-size: 10px;
}

/*----------------------------------------------------------------------------
  YaRosterTipLabel
----------------------------------------------------------------------------*/

#YaRosterTipLabel {
	font-size: 12px;
}

/*----------------------------------------------------------------------------
  YaPreferences
----------------------------------------------------------------------------*/

#YaPreferences QCheckBox,
#YaPreferences QRadioButton,
#YaPreferences QLabel {
	font-size: 12px;
}

#YaPreferences QCheckBox,
#YaPreferences QRadioButton {
	min-height: 15px;
	max-height: 15px;
}

#YaPreferences QLabel {
	min-height: 18px;
	max-height: 18px;
}

#YaPreferences #groupLabelContactList,
#YaPreferences #groupLabelNotifications,
#YaPreferences #groupLabelChat {
	color: #969696;
}

#YaPreferences QCheckBox:disabled {
	color: #969696;
}

/*----------------------------------------------------------------------------
  YaChatDlg
----------------------------------------------------------------------------*/

#YaChatDlg #selfUserpic,
#YaChatDlg #contactUserpic,
YaRosterTipLabel #contactUserpic {
	border-style: none;
}

#YaChatDlg #chatTopFrame {
	border-style: none;
}

#YaChatDlg {
	border-style: none;
}

#YaChatDlg #topFrame,
#YaChatDlg #bottomFrame {
	border-style: none;
	border-width: 0px;
}

#MainWindow #applicationName,
#MainWindow #selfName,
#YaChatDlg #contactName,
#YaManageAccounts #accountsLabel {
	font-weight: bold;
	font-size: 14px;

	color: white;
}

#YaRosterTipLabel #contactName {
	font-weight: bold;
	font-size: 12px;

	color: black;
}

